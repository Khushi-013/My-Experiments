//To find the value of series
//1+3+........+3^n using while loop
#include <stdio.h>
#include <conio.h>
#include <math.h>
void main()
{
    int i=0, sum=0, n;
    printf("Enter value of n:");
    scanf("%d",&n);
    while(i<=n)
    {
        sum=sum+pow(3,i);
        i++;
    }
    printf("\nSUM=%d",sum);
    getch();
    
}
    
